        <input id="disability_no" type="radio" name="disability" value="no" />
        <label for="disability_no" class="font-medium text-gray-700">No</label>
        <input id="disability_no_response" type="radio" name="disability" value="No Response Given" />
        <label for="disability_no_response" class="font-medium text-gray-700">Prefer not to say</label>
    </div>

    <div class="mb-4">
