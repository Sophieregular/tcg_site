---
layout: default
related_articles: true
meta_title: {{ title }}
meta_description: {{ excerpt }}
body_class: apprenticeship-employer
---

{% if course.instances.length > 0 %}
{% include "components/modals/expression-of-interest.njk" %}
{% endif %}


<main id="course" class="main flex flex-1 flex-col focus:outline-none" tabindex="-1">
  <section id="course-cta-header"class="fixed top-0 bg-white flex space-between mx-auto z-50 shadow py-2 lg:py-4 w-full">
    <div class="flex inner justify-between items-center">
      <div class="flex items-center">
        <div class="logo mr-8 hidden sm:block">
          <img class="block h-10 md:h-10 w-auto" src="../../../images/tcg-logo/Blue/The_Coders_Guild_Logo_Blue.svg" alt="The Coders Guild Logo">
        </div>
        <div class="title mr-2">
          <p class="text-blue-200 text-xs sm:text-sm md:text-md lg:text-lg font-bold">{{ course.title }}</p>
        </div>
      </div>
      <div class="flex flex-col sm:flex-row">
        <div>
          <a href="{% if course.link %}{{ course.link }}{% else %}#contact{% endif %}" class="px-2 md:px-4 py-2 bg-blue-200" {% if course.link %}target="_blank"{% endif %}><span class="text-white font-bold rounded whitespace-no-wrap text-sm lg:text-md">Apply Now <i class="ml-2 fa-solid fa-chevron-right"></i></span></a>
          </div>
          <div>
          <a href data-modal="expression-of-interest" class="rounded px-2 md:px-4 py-2 text-blue-200 "><span class="text-blue-200 font-bold rounded whitespace-no-wrap text-sm lg:text-md">Apply Later <i class="ml-2 fa-solid fa-chevron-right"></i></span></a>
          </div>
      </div>
    </div>
  </section>
  <section id="hero relative">
  <object type="image/svg+xml" data="../../images/patterns/280.svg" class="hidden lg:block absolute pattern pattern-280"></object>
    <div class="flex flex-col items-center justify-center md:px-20 relative sm:pt-10 md:pt-24 min-h-80 rounded" style="background-image: url(../../images/gradient-background.svg); background-size: cover; background-repeat: no-repeat; background-position: center;">
      <div class="flex flex-col">
        <div class="flex flex-col lg:flex-row container">
          <div class="lg:w-6/12 order-2 lg:order-1">
            <header class="md:w-8/12">
              <h1 class="md:pt-12 text-blue-200 text-4xl leading-4xl sm:text-5xl sm:leading-5xl mb-2">{{ course.title }}</h1>
              {% if course.isFunded and course.subtitle %}
              <h2 class="mb-2 text-2xl sm:text-2xl text-black leading-3xl sm:leading-4xl">{{course.subtitle}}</h2>
              {% endif %}
              <p class="bg-green-100 py-2 px-4 text-black inline-block rounded text-sm lg:text-md">Next Course Starts:<strong> {{ course.start | dateDisplay }}</strong>
              </p>
              <div class="flex flex-col my-6">
                <div class="flex justify-between">
                  <a href="{% if course.link %}{{ course.link }}{% else %}#contact{% endif %}" class="flex justify-center items-center bg-gradient-to-r from-blue-200 to-blue-100 px-2 py-4 text-white rounded w-6/12 font-bold" {% if course.link %}target="_blank"{% endif %}>Apply Now <i class="ml-2 fa-solid fa-angle-right"></i> </a>
                    {% if course.isKnoma %}
                      <a href="{{ course.knomaFields.knomaLink}}" class="flex justify-center items-center bg-gradient-to-r from-blue-200 to-blue-100 px-2 py-4 text-white rounded w-6/12 font-bold" target="_blank" target="_blank"><span class="text-white font-bold rounded whitespace-no-wrap text-sm lg:text-md">Available direct via Knoma <i class="ml-2 fa-solid fa-chevron-right"></i></span></a>
                    {% endif %}
                </div>
                <div class="my-6">
                  <a href data-modal="expression-of-interest" class="px-2 md:px-4 py-2 bg-white text-blue-200 "><span class="text-blue-200 font-bold rounded whitespace-no-wrap text-sm lg:text-md">Apply Later<i class="ml-2 fa-solid fa-chevron-right"></i></span></a>
                  <a href="#" data-modal="cd-send-info" class="mt-4 text-purle-700 text-lg flex items-center "><strong>Info for Businesses <i class="ml-2 fa-solid fa-angle-right"></i></strong> </a>
                </div>
              </div>
            </header>
          </div>
          <div class="lg:w-6/12 pt-24 lg:pt-0 order-1 lg:order-2 flex items-center justify-center mb-6 lg:mb-0">
            <img src="{{course.featuredImage}}" class="rounded-lg aspect-[4/3] z-20" alt="{{course.title}}" />
            <object type="image/svg+xml" data="../../images/patterns/145.svg" class="hidden lg:block absolute pattern pattern-145"></object>
          </div>
        </div>
        {% if course.isFunded %}
        {% include '../components/courses/logos.njk' %}
        {% endif %}
      </div>
    </div>
  </section>
  <section id="pitch">
    <div class="post inner content md:px-20 mx-auto mt-12">
      {% include '../components/courses/pitch.njk' %}
      {% if course.instances %}
        {% include '../components/courses/course-instances.njk' %}
      {% endif %}
      {% if course.isFunded %}
        {% include '../components/courses/banner-cta.njk' %}
      {% endif %}
    {% if course.video_embed %}
      {% include '../components/courses/video.njk' %}
    {% endif %}
    </div>
  </section>
  <section id="content" class="section-rounded z-10">
    {% include '../components/courses/content.njk' %}
  </section>
  {% if course.trainers.length > 0%}
    <section id="trainers">
      {% include '../components/courses/trainers.njk' %}
    </section>
  {% endif %}
  <section id="testimonials" class="my-12">
      {% include '../components/courses/course-testimonial.njk' %}
  </section>
  {% if course.isFunded %}
  <section id="further-cta">
      {% include '../components/courses/further-cta.njk' %}
  </section>
  {% endif %}
  <section id="footer-cta">
    {% include '../components/courses/individuals-and-businesses.njk' %}
  </section>
  <section id="contact" class="pt-16">
    {% include '../components/courses/contact.njk' %}
  </section>
  </div>
</main>
