<h2 class="text-white mb-12">Our Apprenticeships</h2>
  <div class="flex flex-wrap -mx-4">
    {% for course in courses %}
      {% if course.courseType === 'Apprenticeship' and course.isActive  %}
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 mb-8">
          <div class="bg-white px-6 py-8 rounded-lg shadow-primary h-full">
            <div class="flex flex-col items-start h-full">
              <object type="image/svg+xml" data="../images/icons/Group-79.svg" class="mb-2"></object>
              <h3 class="text-xl leading-lg mb-0">{{course.title}}</h3>
              <h3 class="text-xl leading-lg mb-2">{{course.qualification}}</h3>
              <div class="mt-auto not-on-print">
                <p class="font-bold leading-sm font-heading mb-4">I want to...</p>
                <div class="mb-4">
                  <a href='#' data-modal="book-a-call" class="bookacall-c-btn">
                    <button class="inline-block bg-blue-200 py-2 px-6 rounded text-white font-heading font-bold text-md leading-sm whitespace-no-wrap" >Hire apprentice</button>
                  </a>
                </div>
                <div>
                {% if course.title === 'Software Dev L4'%}
                  <a href="https://applysdl4.thecodersguild.org.uk/">
                    <button class="inline-block bg-red-100 py-2 px-6 rounded text-white font-heading font-bold text-md leading-sm whitespace-no-wrap">Find a position</button>
                  </a>
                {% endif %}
                {% if course.title === 'Software Testing L4'%}
                  <a href="https://applystl4.thecodersguild.org.uk/">
                    <button class="inline-block bg-red-100 py-2 px-6 rounded text-white font-heading font-bold text-md leading-sm whitespace-no-wrap">Find a position</button>
                  </a>
                {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>




<h2 class="text-white mb-12">Coming Soon</h2>
